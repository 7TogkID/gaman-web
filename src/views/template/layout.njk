  <body
    class="bg-neutral-900 text-gray-200 m-0 p-0"
  >
    <div class="fixed top-0 left-0 w-full h-full z-0">
      <img src="/img/pattern.png" alt="" class="w-full h-full object-cover object-center"/>
      <div class="absolute top-0 left-0 w-full h-full after:content-[''] after:absolute after:inset-0 after:bg-gradient-to-t after:to-transparent after:via-neutral-900/50 after:from-neutral-900 after:from-5%"></div>
      {# Kiri bawah ke kanan atas #}
      <div class="absolute top-0 left-0 w-full h-full after:content-[''] after:absolute after:inset-0 after:bg-gradient-to-tr after:from-neutral-900 after:from-10% after:to-transparent "></div>
      {# Kanan bawah ke kiri atas #}
      <div class="absolute top-0 left-0 w-full h-full after:content-[''] after:absolute after:inset-0 after:bg-gradient-to-tl after:from-neutral-900 after:from-10% after:to-transparent "></div>
    </div>

    {# Navbar #}
    {% include "template/navbar.njk" %}

    {# Hero Content #}
    {% block content %}{% endblock %}

    {# Footer #}
    {# {% include "template/footer.njk"%} #}

    {% if footer | default(true) %}
      <footer class="w-full bg-neutral-950 border-t border-neutral-800 text-center text-sm text-gray-400 py-6 z-10 relative mt-12">
        <p>
    &copy; 2025 7TogkID — Made with ❤️ in Indonesia
  </p>
      </footer>
    {% endif %}

  </body>
  <script src="/js/aos.js"></script>
  <script>
    AOS.init();
  </script>

  <script>
    hljs.highlightAll();

    document
      .querySelectorAll("pre")
      .forEach((pre) => {
        const button = document.createElement("button");
        button.className = "paste-btn";
        button.innerHTML = `<i class="fa-regular fa-paste"></i> Copy`;

        button.addEventListener("click", () => {
          const code = pre.querySelector("code");
          if (!code) 
            return;
          
  
          navigator
            .clipboard
            .writeText(code.innerText)
            .then(() => {
              button.innerHTML = `<i class="fa-solid fa-check"></i> Copied!`;
              setTimeout(() => {
                button.innerHTML = `<i class="fa-regular fa-paste"></i> Copy`;
              }, 1500);
            });
        });

        pre
          .classList
          .add("code-block");
        pre.appendChild(button);
      });
  </script>

  <style>
    .code-block {
      position: relative;
    }

    .paste-btn {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
      background-color: #1f2937;
      /* bg-gray-800 */
      color: #ccc;
      border: none;
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
      border-radius: 0.25rem;
      cursor: pointer;
      z-index: 10;
      display: flex;
      align-items: center;
      gap: 0.3rem;
    }

    .paste-btn:hover {
      color: white;
      background-color: #374151;
      /* hover: bg-gray-700 */
    }
  </style>

</html>